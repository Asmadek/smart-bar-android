<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.StartActivity">

    <android.support.constraint.Guideline
        android:id="@+id/guidline_start_top"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.1"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guidline_start_top"
        android:gravity="center"
        android:text="Выбери ассистента:"
        android:textColor="@color/black87"
        android:textSize="20sp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="0dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toTopOf="@id/guidline_start_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp">
        <fragment
            android:id="@+id/fragment_assistant1"
            android:name="com.innopolis.zelenyichai.smartbar.Fragment.AssistentFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_width="0dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toBottomOf="@id/card1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="8dp"
        >

        <fragment
            android:id="@+id/fragment_assistant2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.innopolis.zelenyichai.smartbar.Fragment.AssistentFragment"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card3"
        android:layout_height="72dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/card2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="8dp"
        >
        <fragment
            android:id="@+id/fragment_assistant3"
            android:name="com.innopolis.zelenyichai.smartbar.Fragment.AssistentFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:id="@+id/card4"
        android:layout_height="72dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/card3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="8dp"
        >
        <fragment
            android:id="@+id/fragment_assistant4"
            android:name="com.innopolis.zelenyichai.smartbar.Fragment.AssistentFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card5"
        android:layout_height="72dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/card4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="8dp"
        >
        <fragment
            android:id="@+id/fragment_assistant5"
            android:name="com.innopolis.zelenyichai.smartbar.Fragment.AssistentFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card6"
        android:layout_height="72dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/card5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="8dp"
        >
        <fragment
            android:id="@+id/fragment_assistant6"
            android:name="com.innopolis.zelenyichai.smartbar.Fragment.AssistentFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>