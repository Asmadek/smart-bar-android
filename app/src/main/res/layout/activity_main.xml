<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <android.support.constraint.Guideline
        android:id="@+id/guidline_start_top"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.1"/>

    <android.support.constraint.Guideline
        android:id="@+id/guidline_start_bottom"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.9"/>
    
    <fragment
        android:id="@+id/fragment_assistant1"
        android:name="com.innopolis.zelenyichai.smartbar.AssistentFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guidline_start_top"
        app:layout_constraintBottom_toTopOf="@id/fragment_assistant2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="3dp"
        />
    <fragment
        android:id="@+id/fragment_assistant2"
        android:name="com.innopolis.zelenyichai.smartbar.AssistentFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_assistant1"
        app:layout_constraintBottom_toTopOf="@id/fragment_assistant3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="3dp"/>
    <fragment
        android:id="@+id/fragment_assistant3"
        android:name="com.innopolis.zelenyichai.smartbar.AssistentFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_assistant2"
        app:layout_constraintBottom_toBottomOf="@id/guidline_start_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="3dp"/>
</android.support.constraint.ConstraintLayout>