<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:id="@+id/rocket_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp"
                app:cardBackgroundColor="#C8E6C9"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"

                >
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    >
                    <android.support.constraint.Guideline
                        android:id="@+id/longisland_guid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.25"/>
                    <ImageView
                        android:id="@+id/longisland_image"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toLeftOf="parent"

                        app:layout_constraintRight_toRightOf="@id/longisland_guid"
                        android:src="@mipmap/rocket_round"
                        android:layout_marginTop="2dp"
                        />
                    <TextView
                        android:id="@+id/longisland_name"
                        android:text="Космичееский Тесла"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        app:layout_constraintLeft_toLeftOf="@id/longisland_guid"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/longisland_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/longisland_description"
                        app:layout_constraintLeft_toLeftOf="@id/longisland_guid"
                        android:text="300 р."
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/longisland_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/longisland_name"
                        app:layout_constraintLeft_toLeftOf="@id/longisland_guid"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="Популярный коктейль на основе водки, джина, текилы и рома."
                        android:textSize="12sp"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">
                    <android.support.constraint.Guideline
                        android:id="@+id/wcola_guid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.25"/>
                    <ImageView
                        android:id="@+id/wcola_image"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:src="@mipmap/whisky_round"
                        app:layout_constraintRight_toRightOf="@id/wcola_guid"
                        android:layout_marginTop="2dp"
                        />
                    <TextView
                        android:id="@+id/wcola_name"
                        android:text="Виски - Кола"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        app:layout_constraintLeft_toLeftOf="@id/wcola_guid"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/wcola_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/wcola_description"
                        app:layout_constraintLeft_toLeftOf="@id/wcola_guid"
                        android:text="150 р."
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/wcola_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/wcola_name"
                        app:layout_constraintLeft_toLeftOf="@id/wcola_guid"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="Этот коктейль не имеет ни даты рождения, ни достоверной истории. Происхождение названия тоже непонятно."
                        android:textSize="12sp"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">
                    <android.support.constraint.Guideline
                        android:id="@+id/moji_guid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.25"/>
                    <ImageView
                        android:id="@+id/moji_image"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="@id/moji_guid"
                        android:src="@mipmap/moji_round"
                        android:layout_marginTop="2dp"
                         />
                    <TextView
                        android:id="@+id/moji_name"
                        android:text="Мохито"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        app:layout_constraintLeft_toLeftOf="@id/moji_guid"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/moji_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/moji_description"
                        app:layout_constraintLeft_toLeftOf="@id/moji_guid"
                        android:text="350 р."
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/moji_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/moji_name"
                        app:layout_constraintLeft_toLeftOf="@id/moji_guid"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="Мохито традиционно состоит из четырёх ингредиентов: газированная вода, сахар, лайм и мята."
                        android:textSize="12sp"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">
                    <android.support.constraint.Guideline
                        android:id="@+id/vmar_guid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.25"/>
                    <ImageView
                        android:id="@+id/vmar_image"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="@id/vmar_guid"
                        android:src="@mipmap/vmar_round"
                        android:layout_marginTop="2dp"
                        />
                    <TextView
                        android:id="@+id/vmar_name"
                        android:text="Водка - Мартини"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        app:layout_constraintLeft_toLeftOf="@id/vmar_guid"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/vmar_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/vmar_description"
                        app:layout_constraintLeft_toLeftOf="@id/vmar_guid"
                        android:text="350 р."
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/vmar_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/vmar_name"
                        app:layout_constraintLeft_toLeftOf="@id/vmar_guid"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="Очередной коктейль, придуманный главным героем книг Яна Флеминга Джеймсом Бондом."
                        android:textSize="12sp"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="8dp"
                android:elevation="8dp">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">
                    <android.support.constraint.Guideline
                        android:id="@+id/pc_guid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.25"/>
                    <ImageView
                        android:id="@+id/pc_image"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="@id/pc_guid"
                        android:layout_marginTop="2dp"
                        android:src="@mipmap/pc_round"/>
                    <TextView
                        android:id="@+id/pc_name"
                        android:text="Пина Колада"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        app:layout_constraintLeft_toLeftOf="@id/pc_guid"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/pc_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/pc_description"
                        app:layout_constraintLeft_toLeftOf="@id/pc_guid"
                        android:text="300 р."
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/pc_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/pc_name"
                        app:layout_constraintLeft_toLeftOf="@id/pc_guid"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="Традиционный карибский алкогольный коктейль на основе светлого рома, с кокосовым молоком и ананасовым соком. "
                        android:textSize="12sp"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>